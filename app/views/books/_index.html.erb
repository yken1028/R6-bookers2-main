<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user.name) do %>

          <%= image_tag(book.user.get_profile_image, size:'50x50') %>
          <% end %>
        </td>
        <td width="100px"><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td id="favorite_buttons_<%= book.id %>">
          <%= render "favorites/favorites", book: book %>
    　　</td>
        <td width="140px">
          コメント数：<%= book.book_comments.count %>
        </td>
        <td width="100px">
          閲覧数: <%= book.view_counts.count %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>